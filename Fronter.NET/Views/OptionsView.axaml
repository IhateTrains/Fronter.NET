<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Fronter.ViewModels"
             xmlns:ns="clr-namespace:Fronter.Extensions"
             xmlns:styles="clr-namespace:Material.Styles;assembly=Material.Styles"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Fronter.Views.OptionsView">
    <Design.DataContext>
        <viewModels:OptionsViewModel />
    </Design.DataContext>
    <ItemsControl Items="{Binding Items}">
        <ItemsControl.Styles>
            <Style Selector="styles|Card">
                <Setter Property="Margin" Value="2,10" />
                <Setter Property="MaxWidth" Value="400"></Setter>
            </Style>
        </ItemsControl.Styles>
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <WrapPanel Orientation="Vertical">
                </WrapPanel>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <styles:Card>
                    <StackPanel>
                        <TextBlock Text="{ns:DynamicLoc DisplayName}"></TextBlock>
                        <TextBlock Text="{ns:DynamicLoc Tooltip}"></TextBlock>
                        
                        <!-- TODO: LIST OF CHECKBOCEX
                        <CheckBox Text="{Binding TextSelector.Value, FallbackValue={}}" IsEnabled="{Binding TextSelector.Editable, FallbackValue=false}" IsVisible="{Binding TextSelector, Converter={x:Static ObjectConverters.IsNotNull}}"></CheckBox>-->
                        <ListBox Items="{Binding CheckBoxSelector.CheckBoxOptions, FallbackValue={}}" IsVisible="{Binding CheckBoxSelector, Converter={x:Static ObjectConverters.IsNotNull}}" SelectionMode="Multiple">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Red" CornerRadius="4" Padding="4">
                                        <TextBlock Text="{ns:DynamicLoc DisplayName}"/>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- TODO: LIST OF RADIO BUTTONS -->
                        <ListBox Items="{Binding RadioSelector.RadioOptions, FallbackValue={}}" IsVisible="{Binding RadioSelector, Converter={x:Static ObjectConverters.IsNotNull}}" SelectionMode="Single"></ListBox>
                       
                        <TextBox Text="{Binding TextSelector.Value, FallbackValue={}}" IsEnabled="{Binding TextSelector.Editable, FallbackValue=false}" IsVisible="{Binding TextSelector, Converter={x:Static ObjectConverters.IsNotNull}}"></TextBox>
                    </StackPanel>
                </styles:Card>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
